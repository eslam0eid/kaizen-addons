<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="account_move_manual_rate_inherit" model="ir.ui.view">
            <field name="name">account_move_manual_rate_inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@id='header_right_group']" position="after">
                    <group>
                        <field name="apply_currency_rate" readonly="state != 'draft'"/>
                        <field name="manual_rate" invisible="apply_currency_rate != True" readonly="state != 'draft'"/>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>